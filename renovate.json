{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "assignees": [
    "TomChamberlainUK"
  ],
  "packageRules": [
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "groupName": "all pin dependencies",
      "groupSlug": "all-pin",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "pin"
      ],
      "automerge": true
    }
  ],
  "platformAutomerge": true
}
